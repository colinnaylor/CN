<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="BBfieldValueRetriever.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false"/>
    </sectionGroup>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <applicationSettings>
    <BBfieldValueRetriever.Properties.Settings>
      <setting name="DSN" serializeAs="String">
        <value>BloombergTestUat</value>
      </setting>
      <setting name="MillisecondTimerInterval" serializeAs="String">
        <value>1000</value>
      </setting>
      <setting name="hitsWarningLevel" serializeAs="String">
        <value>4000</value>
      </setting>
      <setting name="hitsLimit" serializeAs="String">
        <value>5000</value>
      </setting>
      <setting name="EnvName" serializeAs="String">
        <value>Uat</value>
      </setting>
    </BBfieldValueRetriever.Properties.Settings>
  </applicationSettings>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file  for information on customizing logging rules and outputs.
   -->
    <variable name="brief" value="${longdate} | ${level} | ${logger} | ${message}"/>
    <variable name="verbose" value="${longdate} | ${machinename} | ${processid} | ${processname} | ${level} | ${logger} | ${message}"/>
    <targets>
      <!-- add your targets here -->
      <target xsi:type="File" name="remoteFile" fileName="\\londonfs1\d\Export\Data\Dev\Logs\${logger}.${machinename}.Uat.Current.log" layout="${longdate} ${logger} ${uppercase:${level}} ${message}" archiveFileName="\\londonfs1\d\Export\Data\Dev\Logs\${logger}.${machinename}.Uat.Archive.{##}.log" archiveNumbering="Rolling" archiveEvery="Day" maxArchiveFiles="7"/>
      <target xsi:type="Console" name="myConsole" layout="${longdate} ${logger} ${uppercase:${level}} ${message}" footer="" header="" error="false"/>
      <target name="mail" xsi:type="Mail" smtpServer="LONDONEX1.mpuk.com" smtpPort="25" from="ITsystemUser@mpuk.com" to="charlie.wong@mpuk.com" subject="Error logged by Berg (Uat) - ${message} (${machinename})" body="${longdate}|${level:uppercase=true}|${logger}|${callsite}|${message}|${exception}|${stacktrace}"/>
    </targets>
    <rules>
      <!-- add your logging rules here -->
      <logger name="*" minlevel="Trace" writeTo="myConsole"/>
      <logger name="*" minlevel="Trace" writeTo="remoteFile"/>
      <logger name="*" minlevel="Fatal" writeTo="mail"/>
    </rules>
  </nlog>
</configuration>
