<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="SwiftImporterService.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false"/>
    </sectionGroup>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <applicationSettings>
    <SwiftImporterService.Properties.Settings>
      <setting name="PollFolders" serializeAs="Xml">
        <value>
          <ArrayOfString xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema">
            <string>\\swiftprod\SWIFT_FILES\</string>
          </ArrayOfString>
        </value>
      </setting>
      <setting name="ConfigName" serializeAs="String">
        <value>Live</value>
      </setting>
      <setting name="ConnectionString" serializeAs="String">
        <value>Data Source=MINKY;Initial Catalog=Reconciliation;Integrated Security=True</value>
      </setting>
      <setting name="Recipients" serializeAs="String">
        <value>duoc@mpuk.com</value>
      </setting>
    </SwiftImporterService.Properties.Settings>
  </applicationSettings>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
    <variable name="brief" value="${longdate} | ${level} | ${logger} | ${message}"/>
    <variable name="verbose" value="${longdate} | ${machinename} | ${processid} | ${processname} | ${level} | ${logger} | ${message}"/>
    <targets>
      <!-- add your targets here -->
      <target xsi:type="File" name="remoteFile" fileName="\\londonfs1\d\Export\Data\Dev\Logs\${logger}.${machinename}.Live.Current.log" layout="${longdate} ${logger} ${uppercase:${level}} ${message}" archiveFileName="\\londonfs1\d\Export\Data\Dev\Logs\${logger}.${machinename}.Live.Archive.{##}.log" archiveNumbering="Rolling" archiveEvery="Day" maxArchiveFiles="7"/>
      <target xsi:type="Console" name="myConsole" layout="${longdate} ${logger} ${uppercase:${level}} ${message}" footer="" header="" error="false"/>
      <target name="mail" xsi:type="Mail" smtpServer="LONDONEX1.mpuk.com" smtpPort="25" from="ITsystemUser@mpuk.com" to="charlie.wong@mpuk.com" subject="Error logged by Swift Importer (Live) - ${message} (${machinename})" body="${longdate}|${level:uppercase=true}|${logger}|${callsite}|${message}|${exception}|${stacktrace}"/>
    </targets>
    <rules>
      <!-- add your logging rules here -->
      <logger name="*" minlevel="Trace" writeTo="myConsole"/>
      <logger name="*" minlevel="Trace" writeTo="remoteFile"/>
      <logger name="*" minlevel="Fatal" writeTo="mail"/>
    </rules>
  </nlog>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2"/>
  </startup>
</configuration>
